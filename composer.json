{
    "name": "spatie/laravel-backup-server",
    "description": "Backup all your servers",
    "keywords": [
        "spatie",
        "laravel-backup-server"
    ],
    "homepage": "https://github.com/spatie/laravel-backup-server",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../docker"
        }
    ],
    "require": {
        "php": "^7.4",
        "friendsofphp/php-cs-fixer": "^2.16",
        "illuminate/console": "^6.13",
        "illuminate/contracts": "^6.13",
        "illuminate/events": "^6.13",
        "illuminate/notifications": "^6.12",
        "illuminate/queue": "^6.13",
        "illuminate/support": "^6.13",
        "laravel/slack-notification-channel": "^2.0",
        "spatie/laravel-flash": "^1.4",
        "spatie/regex": "^1.4",
        "spatie/ssh": "^1.3"
    },
    "require-dev": {
        "orchestra/testbench": "^4.5",
        "phpunit/phpunit": "^8.2",
        "spatie/test-time": "^1.1",
        "symfony/var-dumper": "^4.3",
        "spatie/docker": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\BackupServer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\BackupServer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "build-docker": "docker build -t spatie/laravel-backup-server-tests ./tests/docker",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "php ./vendor/bin/php-cs-fixer fix --config .php_cs"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\BackupServer\\BackupServerServiceProvider"
            ],
            "aliases": {
                "BackupServer": "Spatie\\BackupServer\\BackupServerFacade"
            }
        }
    }
}
